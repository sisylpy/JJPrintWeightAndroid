<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/light_green" />
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F8F9FA" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/input_border_gray" />
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/input_border_gray" />
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>
</selector> 