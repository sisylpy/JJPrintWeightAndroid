<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- 现代化标题栏（只保留商品名+单位，纯色背景，居中） -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/stockout_dialog_header"
        android:padding="20dp"
        android:layout_marginBottom="0dp">

        <!-- 关闭按钮 -->
        <ImageButton
            android:id="@+id/btn_close"
            style="@style/CloseButtonStyle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_close_white"
            android:contentDescription="关闭" />

        <!-- 商品信息容器 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 品牌和标题行 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 品牌标签 -->
                <TextView
                    android:id="@+id/tv_goods_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/brand_tag_bg"
                    android:padding="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold" />

                <!-- 商品标题 -->
                <TextView
                    android:id="@+id/tv_goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- 规格信息 -->
            <TextView
                android:id="@+id/tv_goods_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="gone"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- ========== 蓝牙秤状态区域已删除（2025-07-08）========== -->
        <!-- 功能说明：显示蓝牙秤连接状态 -->
        <!-- 删除原因：用户要求删除弹窗上面的蓝牙秤状态区域 -->
        <!--
        <TextView
            android:id="@+id/tv_scale_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝牙秤: 未连接"
            android:textColor="@android:color/holo_green_dark"
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium" />
        -->
        <!-- ========== 蓝牙秤状态区域删除结束 ========== -->
    </RelativeLayout>

    <!-- 订单列表容器（紧贴顶部） -->
    <FrameLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/list_container_bg"
        android:paddingLeft="0dp"
        android:paddingStart="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_orders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="0dp"
            android:scrollbars="vertical" />

        <!-- 滚动提示 -->
        <TextView
            android:id="@+id/tv_scroll_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/scroll_hint_modern"
            android:padding="8dp"
            android:text="向上滑动查看更多"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone"
            android:fontFamily="sans-serif-medium" />

        <!-- 空状态提示 -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无订单数据"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- 加载状态 -->
        <LinearLayout
            android:id="@+id/loading_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在加载订单数据..."
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </FrameLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_modern" />

    <!-- 现代化按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_ripple_modern"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:elevation="0dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>