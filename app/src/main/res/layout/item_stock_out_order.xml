<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/order_item_modern_bg"
    android:layout_margin="4dp"
    android:elevation="2dp">

    <!-- 选中指示器 -->
    <LinearLayout
        android:id="@+id/selected_indicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@drawable/selected_indicator_gradient"
        android:visibility="gone"
        android:layout_marginEnd="12dp"/>

    <!-- 左侧信息区域 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="12dp">

        <!-- 部门名称 -->
        <TextView
            android:id="@+id/tv_department_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- 订单数量信息 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_department"
                android:tint="@color/light_green"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tv_order_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_green"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- 备注信息 -->
        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_danger"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/remark_bg"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- 右侧操作区域 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- 数量输入区域 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/input_container_bg"
            android:padding="8dp">

            <EditText
                android:id="@+id/et_out_quantity"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:inputType="number"
                android:background="@drawable/edit_text_focus_modern"
                android:padding="8dp"
                android:textSize="14sp"
                android:hint="输入数量"
                android:textColorHint="@color/text_hint_color"
                android:gravity="center_vertical|end"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/light_green"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- 蓝牙秤按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_scale"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/scale_button_bg"
                android:src="@drawable/ic_scale"
                android:tint="@color/light_green"
                android:contentDescription="蓝牙秤"
                android:padding="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 