<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme_dialog_HALF_TRANS" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--<style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">-->
        <!--<item name="android:button">@drawable/switch_checkbox_selector</item>-->
    <!--</style>-->
 <!-- 弹窗动画样式 -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- Tab样式 -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabTextAppearanceSelected" parent="TabTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- 现代化对话框样式 -->
    <style name="ModernDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@style/ModernDialogAnimation</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

    <!-- 现代化对话框动画 -->
    <style name="ModernDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!-- 现代化按钮样式 -->
    <style name="ModernButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- 现代化输入框样式 -->
    <style name="ModernEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- 现代化文本样式 -->
    <style name="ModernTextTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ModernTextSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ModernTextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ModernTextCaption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
